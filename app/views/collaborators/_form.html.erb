  <h3> Current Collaborators </h3>
  <% if @wiki.user == current_user %>
    <%= form_with url: wiki_collaborators_path(@wiki), method: :post do |f|%>
      Enter email of the collaborator: <%= f.text_field :email %>
      <%= f.submit 'Add collaborator' %>
    <% end %>
  <% end %>
  
  <% @wiki.collaborators.each do |user| %>
    <div>
     <%= user.user.email %>
     <% if @wiki.user == current_user %>
       <%= link_to "Remove collaborator", wiki_collaborator_path(@wiki, user), method: :delete, data: { confirm: "Are you sure you want remove user as a collaborator?" } %>
     <% end %>  
    </div> 
  <% end %>
