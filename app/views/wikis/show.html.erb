<% if user_is_authorized_to_view?(@wikis) %>
<h1><%= @wikis.title %></h1>
 <p><%= @wikis.body %></p>
<div class="col-md-4">
    <% if user_is_authorized_to_update? %>
        <%= link_to "Edit", edit_wiki_url(@wikis.id), class: 'btn btn-success' %>
    <% end %>
    <% if user_is_authorized_to_delete?(@wikis) %>
        <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
    <% end %>
</div>
<% end %>